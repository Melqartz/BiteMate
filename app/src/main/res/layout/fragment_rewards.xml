<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    tools:context=".ui.RewardsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pointsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"
            android:text="Your Points"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/currentPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="32dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:background="@color/black"
            android:text="120"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:backgroundTint="@color/black"
            android:elevation="4dp"
            android:letterSpacing="0.05" />

        <!-- Rewards Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <!-- Burger Reward -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                android:radius="12dp"
                android:elevation="6dp">

                <Button
                    android:id="@+id/redeemBurgerButton"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/classicburger"
                    android:text="Redeem Free American Burger (100 points)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTintMode="src_atop"
                    android:textAlignment="center"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>

            <!-- Fries Reward -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_gravity="center_horizontal"
                android:radius="12dp"
                android:elevation="6dp">

                <Button
                    android:id="@+id/redeemFriesButton"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/frenchfries"
                    android:text="Redeem Free French Fries (50 points)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTintMode="src_atop"
                    android:textAlignment="center"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>

            <!-- Drink Reward -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_gravity="center_horizontal"
                android:radius="12dp"
                android:elevation="6dp">

                <Button
                    android:id="@+id/redeemDrinkButton"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:background="@drawable/pepsi"
                    android:text="Redeem Free Drink (30 points)"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTintMode="src_atop"
                    android:textAlignment="center"
                    tools:ignore="TextContrastCheck" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
